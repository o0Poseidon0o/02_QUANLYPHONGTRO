{
  "compilerOptions": {
    /* 1. Quan trọng nhất: Định nghĩa đường dẫn */
    "rootDir": "./src",        
    "outDir": "./dist",        

    /* 2. Cấu hình module cho Node.js Backend */
    "target": "es2020",        
    "module": "commonjs",      
    "moduleResolution": "node",
    "esModuleInterop": true,  
    
    /* 3. Các tùy chọn khác */
    "sourceMap": true,       
    "skipLibCheck": true,      
    "strict": true,            
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],     
  "exclude": ["node_modules"]
}
